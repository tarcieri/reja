#!/bin/sh

export ERJANG_HOME="erjang-0.2"
export REIA_HOME="reia"

USAGE="Usage: `basename $0` file.re"
ERL="$ERJANG_HOME/bin/erl"

if [ $# -eq 0 ]; then
	echo $USAGE >&2
	exit 1
fi

PROGRAM=$1
shift

$ERL -pz reia/ebin -noshell +K true -s reia init -s reia_internal execute_file $PROGRAM -s init stop -extra $*